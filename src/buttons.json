{
  "general": {
    "fontFamily": "'Montserrat', sans-serif"
  },
  "name": "Poipole buttons",
  "settings": {
    "primary": {
      "default": {
        "bg": {
          "color": [
            "brand"
          ],
          "gradient": {
            "colors": [
              [
                "brand?saturate=100&lighten=9.61",
                "brand?saturate=100&lighten=9.61&spin=60"
              ],
              [
                "transparent",
                "transparent"
              ]
            ]
          }
        },
        "border": {
          "color": [
            "transparent"
          ]
        },
        "color": [
          "lightShade"
        ],
        "shadow": {
          "y": "-1px"
        }
      },
      "hover": {
        "bg": {
          "color": [
            "darkShade",
            "lightShade"
          ]
        },
        "color": [
          "lightShade",
          "darkShade"
        ]
      }
    },
    "secondary": {
      "default": {
        "bg": {
          "color": [
            "transparent"
          ]
        },
        "border": {
          "color": [
            "darkShade?lighten=32.55",
            "lightShade"
          ]
        },
        "color": [
          "darkShade?lighten=32.55",
          "lightShade"
        ],
        "shadow": {
          "y": "1px",
          "blur": "1px",
          "spread": "1px"
        },
        "fontWeight": 200
      },
      "hover": {
        "bg": {
          "color": [
            "darkShade?lighten=32.55",
            "lightShade"
          ]
        },
        "color": [
          "lightShade",
          "darkShade"
        ]
      }
    }
  },
  "size": {
    "lg": {
      "borderRadius": "5px",
      "borderWidth": "1px",
      "fontSize": "16px",
      "padding": "18px 30px"
    },
    "md": {
      "borderRadius": "5px",
      "borderWidth": "1px",
      "fontSize": "14px",
      "padding": "14px 20px"
    },
    "sm": {
      "borderRadius": "5px",
      "borderWidth": "1px",
      "fontSize": "14px",
      "padding": "10px 16px"
    }
  }
}