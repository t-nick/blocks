{
  "name": "Gengar Buttons",
  "general": {
    "fontFamily": "'Lato', sans-serif"
  },
  "size": {
    "sm": {
      "padding": "10px 16px",
      "borderRadius": 0,
      "fontSize": "14px",
      "borderWidth": "2px"
    },
    "md": {
      "padding": "14px 40px",
      "borderRadius": 0,
      "fontSize": "14px",
      "borderWidth": "2px"
    },
    "lg": {
      "padding": "20px 56px",
      "borderRadius": 0,
      "fontSize": "16px",
      "borderWidth": "2px"
    }
  },
  "settings": {
    "primary": {
      "default": {
        "bg": {
          "color": [
            "brand"
          ]
        },
        "color": [
          "lightShade"
        ],
        "fontWeight": 600,
        "border": {
          "color": [
            "transparent"
          ]
        }
      },
      "hover": {
        "bg": {
          "color": [
            "darkShade",
            "lightShade"
          ]
        },
        "color": [
          "lightShade",
          "darkShade"
        ]
      }
    },
    "primaryAlt": {
      "default": {
        "bg": {
          "color": [
            "darkShade",
            "lightShade"
          ]
        },
        "color": [
          "lightShade",
          "darkShade"
        ],
        "fontWeight": 600,
        "border": {
          "color": [
            "transparent"
          ]
        }
      },
      "hover": {
        "bg": {
          "color": [
            "brand",
            "brand"
          ]
        },
        "color": [
          "lightShade",
          "lightShade"
        ]
      }
    },
    "secondary": {
      "default": {
        "bg": {
          "color": [
            "transparent"
          ]
        },
        "color": [
          "darkShade?lighten=20.9",
          "lightShade"
        ],
        "fontWeight": 600,
        "border": {
          "color": [
            "darkShade?lighten=20.9",
            "lightShade"
          ]
        }
      },
      "hover": {
        "bg": {
          "color": [
            "darkShade?lighten=20.9",
            "lightShade"
          ]
        },
        "color": [
          "lightShade",
          "darkShade"
        ]
      }
    },
    "secondaryAlt": {
      "default": {
        "bg": {
          "color": [
            "transparent"
          ]
        },
        "color": [
          "darkShade?lighten=20.9",
          "lightShade"
        ],
        "fontWeight": 600,
        "border": {
          "color": [
            "brand",
            "lightShade"
          ]
        }
      },
      "hover": {
        "bg": {
          "color": [
            "brand",
            "lightShade"
          ]
        },
        "color": [
          "lightShade",
          "darkShade"
        ]
      }
    }
