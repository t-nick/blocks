{
  "name": "Ybd Buttons",
  "general": {
    "fontFamily": "'Open Sans', sans-serif"
  },
  "size": {
    "sm": {
      "padding": "12px 20px",
      "borderRadius": "100px",
      "fontSize": "12px",
      "borderWidth": "1px"
    },
    "md": {
      "padding": "16px 25px",
      "borderRadius": "100px",
      "fontSize": "14px",
      "borderWidth": "1px"
    },
    "lg": {
      "padding": "16px 25px",
      "borderRadius": "100px",
      "fontSize": "14px",
      "borderWidth": "1px"
    }
  },
  "settings": {
    "primary": {
      "default": {
        "bg": {
          "color": [
            "brand"
          ]
        },
        "color": [
          "lightShade"
        ],
        "border": {
          "color": [
            "transparent"
          ]
        }
      },
      "hover": {
        "bg": {
          "color": [
            "brand?darken=10"
          ]
        },
        "color": [
          "lightShade"
        ]
      }
    },
    "primaryAlt": {
      "default": {
        "bg": {
          "color": [
            "brand"
          ]
        },
        "color": [
          "lightShade"
        ],
        "border": {
          "color": [
            "transparent"
          ]
        }
      },
      "hover": {
        "bg": {
          "color": [
            "brand?darken=10"
          ]
        },
        "color": [
          "lightShade"
        ]
      }
    },
    "secondary": {
      "default": {
        "bg": {
          "color": [
            "transparent"
          ]
        },
        "color": [
          "darkShade",
          "lightShade"
        ],
        "border": {
          "style": "solid",
          "color": [
            "brandColor"
          ]
        }
      },
      "hover": {
        "bg": {
          "color": [
            "brandColor",
            "brandColor"
          ]
        },
        "color": [
          "lightShade",
          "lightShade"
        ]
      }
    },
    "secondaryAlt": {
      "default": {
        "bg": {
          "color": [
            "transparent"
          ]
        },
        "color": [
          "darkShade",
          "lightShade"
        ],
        "border": {
          "style": "solid",
          "color": [
            "brandColor"
          ]
        }
      },
      "hover": {
        "bg": {
          "color": [
            "brandColor",
            "brandColor"
          ]
        },
        "color": [
          "lightShade",
          "lightShade"
        ]
      }
    }
  }
